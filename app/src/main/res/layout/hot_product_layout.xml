<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_icon_product"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon_product"
        android:paddingLeft="10dp"
        android:text="51零用钱-51零用钱"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_red_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_product"
        android:layout_toEndOf="@+id/tv_product"
        android:paddingLeft="10dp"
        android:text="现金贷"
        android:textColor="@color/material_red"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_rate_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon_product"
        android:paddingLeft="10dp"
        android:text="日利率:0.20%"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon_product"
        android:layout_toRightOf="@id/iv_icon_product"
        android:paddingLeft="10dp"
        android:text="可贷0.1-0.5万"
        android:textColor="@color/colorPrimary"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_apply_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:text="立即申请"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_applayed_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon_product"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="563758已申请"
        android:textSize="10dp" />
</RelativeLayout>